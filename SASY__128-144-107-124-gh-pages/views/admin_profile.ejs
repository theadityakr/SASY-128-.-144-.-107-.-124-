  <form >
    <p style="font-size: 40px">Visitor Details</p>

    <div class="form-group">
      <label for="visitor_id">visitor_id</label>
      <input name="username" type="text" class="form-control" id="visitor_id" value="<%= visitor.username %>" >
    </div>

    <div class="form-group">
     <label for="name">name</label>
     <input name="name" type="text" class="form-control" id="name" value="<%= visitor.name %>" >
   </div>

    <div class="form-group">
     <label for="sex">sex</label>
     <input name="sex" type="text" class="form-control" id="sex" value="<%= visitor.sex %>" >
   </div>

    <div class="form-group">
     <label for="exampleInputEmail1">email</label>
     <input name="email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value="<%= visitor.email %>">
   </div>

    <div class="form-group">
     <label for="mobile">mobile</label>
     <input name="mobile" type="text" class="form-control" id="mobile" value="<%= visitor.mobile %>">
   </div>

    <div class="form-group">
     <label for="address">address</label>
     <input name="address" type="text" class="form-control" id="address" value="<%= visitor.address %>">
   </div>

   <div class="form-group">
    <label for="status">card status</label>
    <input name="status" type="text" class="form-control" id="address" value="<%= visitor.status %>">
  </div>


   <div class="form-group">
    <label for="exampleInputEmail1">duration of stay</label>

  <div class="input-group">
    <input type="text" class="form-control" placeholder="visiting time"/>
    <span class="input-group-addon">-</span>
    <input type="text" class="form-control" placeholder="leaving time"/>
</div>


<div class="input-group mb-3">
  <input type="datetime-local" class="form-control">
  <div class="input-group-append">
    <button onclick="extend_admin();" class="btn btn-outline-secondary" type="button">Extend</button>
  </div>
</div>

  </form>

