<body>

  <%  if(message){  %>
  <div style='text-align: center' class="alert alert-<%= message.type %>">
    <button type="button" class="close" data-dismiss='alert'>&times;</button>
    <strong><%= message.intro %></strong> <%= message.message %>
  </div>
  <%  }  %>



  <!-- navbar -->
  <div class="navbar-main">
    <nav class=" navbar navbar-expand-lg top-header responsive-navbar">
      <div class="container-fluid">

        <a class="navbar-brand logo" href="/home">
          <img src="/resources/logo.png" alt="" width="50" height="50" class="d-inline-block align-top logo-image">
          <span class="logo-name">VMS</span>
        </a>

      </div>
    </nav>
  </div>

  <section id="main-text">
    <div class="row main-text-row">
      <div class="col-lg-5 ">
        <h1 class="text"><b>Visitor Management System</b></h1>
      </div>

      <div class="col-lg-7 ">
        <img class="img-fluid main-img" src="resources/home-design.jpeg" alt="">
      </div>

    </div>
  </section>



  <!-- login -->
  <section id="login">
    <% if(user=="admin"){ %>
    <div class="align-login">

        <div class="row">
          <div href="/profile" class="col-sm-6 col-xs-12 col-card">
            <a href="/profile">
            <div class="login-card">
              <div class="card-body">
                <h3 class="name"><strong>Admin Profile</strong></h3>
                <img src="resources/user-login.png" class="admin-img img-fluid" alt="">
              </div>
            </div>
          </a>
          </div>
        </div>
    </div>
    <% } %>


    <% if(user=="visitor"){ %>
    <div class="align-login">

        <div class="row">
          <div href="/profile" class="col-sm-6 col-xs-12 col-card">
            <a href="/profile">
            <div class="login-card">
              <div class="card-body">
                <h3 class="name"><strong>Visitor Profile</strong></h3>
                <img src="resources/user-login.png" class="visito-img img-fluid" alt="">
              </div>
            </div>
          </a>
          </div>
        </div>
    </div>
    <% } %>


    <% if(user=="nil"){ %>
      <div class="align-login">

          <div class="row">
            <div class="col-sm-6 col-xs-12 col-card">
              <a href="/signup">
              <div class="login-card">
                <div class="card-body">
                  <h3 class="name"><strong>Want to Visit? Request HERE!!</strong></h3>
                  <img src="resources/visitor-card.png" class="admin-img img-fluid" alt="">
                </div>

              </div>
              </a>
            </div>
    <!-- <div class="align-login">
      <a href="/login">
        <div class="row"> -->
          <div href="/login" class="col-sm-6 col-xs-12 col-card">
            <a href="/login">
            <div class="login-card">
              <div class="card-body">
                <h3 class="name"><strong>Login</strong></h3>
                <img src="resources/user-login.png" class="admin-img img-fluid" alt="">
              </div>
            </div>
          </a>
          </div>
        </div>
        </div>

    <% } %>


  </section>






  <!-- footer -->
  <footer class="panel-footer">
    <div class="container" style="width:100%;">
      <div class="row">
        <section id="hours" class="col-sm-4">
          <span>contact us:</span><br>
          vms.sasy@gmail.com<br>


          <a href="#"><i class="fab fa-twitter footer-icon"></i></a>
          <a href="#"><i class="fab fa-facebook-square footer-icon"></i></a>
          <a href="#"><i class="fab fa-linkedin footer-icon"></i></a>
          <a href="#"><i class="fab fa-instagram footer-icon"></i></a>
          <hr class="visible-xs">
        </section>


        <section id="address" class="col-sm-4">
          <span>Address:</span><br>
          IIIT - Allahabad, Jhalwa Campus, Deoghat<br>
          Allahabad-211012<br>
          India
          <hr class="visible-xs">
        </section>


        <section id="testimonials" class="col-sm-4">
          <p>About:</p>
          <p>"VMS" is aimed to increase the efficiency of Visitor management systems in the hotel /residential places .The main objectiveis to increase security and safety of the visitors .</p>
          <p>owner: VMS</p>
        </section>
      </div>
      <div class="text-right" style="padding-bottom: 30px;">&copy; Copyright VMS 2020. All rights reserved.</div>
    </div>
  </footer>






