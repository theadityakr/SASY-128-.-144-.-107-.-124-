  <br>
  <% if(details.length==0){ %>
    <h3 style="text-align: center;  margin: auto;">No Pending Requests!</h3>
    <% } %>

  <% if(details.length>0){ %>
  <section>
    <div class="">
      <table class="table container bg-light table-hover">
        <thead class="thead-dark">
          <tr>
            <th scope="col">S No.</th>
            <th scope="col">user_id</th>
            <th scope="col">name</th>
            <th scope="col">sex</th>
            <th scope="col">email_id</th>
            <th scope="col">mobile</th>
            <th scope="col">address</th>
            <th scope="col">status</th>
            <th scope="col">requested date</th>
            <th scope="col">visiting time</th>
            <th scope="col">
              </th>
            <th scope="col">
              </th>
            <th scope="col">
              </th>
            <!-- <th scope="col">leaving time</th> -->

          </tr>
        </thead>
        <tbody>
          <!-- console.log(details.length); -->
          <% for (var i =details.length-1; i>=0;  i-- ) { %>
          <tr scope="row">
            <td><%= details.length -i %></td>
            <td><%= details[i].username %> </td>
            <td><%= details[i].name %></td>
            <td><%= details[i].sex %></td>
            <td><%= details[i].email %></td>
            <td><%= details[i].mobile %></td>
            <td><%= details[i].address %></td>
            <td><%= details[i].status %></td>
            <td><%= details[i].reqDate %></td>
            <td><%= details[i].inDate %></td>
            <td class="align-self-center">
              <form class="" action="index.html" method="post">
                <button name="accept_request" formaction="accept_request" formmethod="post" value="<%= details[i].username %>"onclick="" class="btn btn-primary btn-md">Accept</button>
              </form>
            </td>
            <td class="align-self-center">
              <form class="" action="index.html" method="post">
              <button name="instant_accept" formaction="instant_accept" formmethod="post" value="<%= details[i].username %>" onclick="" class="btn btn-primary btn-md">Instant Accept</button>
              </form>
            </td>
            <td class="align-self-center">
              <form class="" action="index.html" method="post">
              <button name="del_request" formaction="del_request" formmethod="post" onclick="" value="<%= details[i].username %>" class="btn btn-primary btn-md">DeLete Request</button>
              </form>
            </td>
            <!-- <td><%= details[i].outDate %></td> -->

          </tr>

          <% } %>

        </tbody>
      </table>

    </div>
  </section>
  <% } %>


